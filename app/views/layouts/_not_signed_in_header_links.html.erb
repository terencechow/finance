<div class = "nav pull-right">

	<li><%= link_to "Register", new_user_path %></li>
	
	<li class = "dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Login
      		<b class="caret"></b>
      	</a>
	
		<ul class = "dropdown-menu" role="menu">
			<%= form_for :session, :url => sessions_path do |f| %>
			<li><%= f.text_field :email, :placeholder=>"Email", :class=> 'input-medium' %></li>
			<li><%= f.password_field :password, :placeholder=>"Password",:class=> 'input-medium' %></li>
			<li>
			<%= f.submit "Sign In", class: "btn btn-medium" %><%= link_to "Forgot Password? Click Here", "#",:class=>'forgotpassword' %>
			</li>
			<% end %>
		</ul>
	</li>
</div>
