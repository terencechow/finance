<div class = "nav pull-right">

	<li><%= link_to "Register",  new_user_registration_path %></li>
	
	<li class = "dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Login
      		<b class="caret"></b>
      	</a>
	
		<ul class = "dropdown-menu" role="menu">
			<li><%= link_to image_tag('https://dev.twitter.com/sites/default/files/images_documentation/sign-in-with-twitter-gray.png'),  user_omniauth_authorize_path(:twitter) %></li>
			<li class= "divider"></li>
			<%= form_for(resource, :as=>resource_name, :url=>session_path(resource_name)) do |f| %>
			<li><%= f.text_field :email, :placeholder=>"Email", :class=> 'input-medium' %></li>
			<li><%= f.password_field :password, :placeholder=>"Password",:class=> 'input-medium' %></li>
			<li>
			<%= f.submit "Sign In", class: "btn btn-medium" %><%= link_to "Forgot Password? Click Here", new_user_password_path,:class=>'forgotpassword' %>
			</li>
	<% end %>
		</ul>
	</li>
</div>
